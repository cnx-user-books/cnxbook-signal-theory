                            <m:mo>)</m:mo>
                          </m:mrow>
                          <m:mo>-</m:mo>
                          <m:msub>
                            <m:mi>x</m:mi>
                            <m:mi>j</m:mi>
                          </m:msub>
                          <m:mrow>
                            <m:mo>(</m:mo>
                            <m:mi>t</m:mi>
