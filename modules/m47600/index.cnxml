                          <m:mo>|</m:mo>
                        </m:mrow>
                        <m:mn>2</m:mn>
                      </m:msup>
                      <m:mi>d</m:mi>
                      <m:mi>t</m:mi>
                    </m:mfenced>
                    <m:mrow>
                      <m:mn>1</m:mn>
